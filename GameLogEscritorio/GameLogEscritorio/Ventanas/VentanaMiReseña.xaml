<Window x:Class="GameLogEscritorio.Ventanas.VentanaMiReseña"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
        mc:Ignorable="d"
        Title="Mi Reseña" Height="600" Width="920" Background="Black"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
>
    <Grid Background="#0C3C5C">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Background="#23588A" CornerRadius="10,10,0,0" Height="40" VerticalAlignment="Top">
            <Grid>
                <TextBlock Text="MI RESEÑA" 
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               HorizontalAlignment="Right"/>

                <Button x:Name="btnClose" Content="Regresar"
                            Width="80" Height="30"
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            Margin="10,0,0,0"
                            Click="Cancelar_Click"
                            Cursor="Hand"
                            Background="Transparent"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF5F5F5F"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="0">
            <Border.Background>
                <ImageBrush ImageSource="/Imagenes/FondoInterfaces.png" Stretch="UniformToFill"/>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image x:Name="logo"
                       Width="137"
                       Height="123"
                       Grid.Row="0"
                       Grid.Column="0"
                       Margin="40,30,0,0"
                       Stretch="UniformToFill"
                       Source="/Imagenes/Amarillo/iconoLapizA.png"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />

                <Image Source="{Binding RutaImagenVideojuego}"
                       Width="200"
                       Height="200"
                       Grid.Row="1"
                       Grid.RowSpan="3"
                       Grid.Column="0"
                       Margin="50,20,0,0"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />

                <TextBlock Text="{Binding TituloVideojuego}"
                           FontSize="40"
                           FontWeight="Bold"
                           Foreground="White"
                           Grid.Row="0"
                           Grid.Column="1"
                           Margin="20,30,20,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>

                <TextBlock Text="Mi calificación:"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Grid.Row="1"
                           Grid.Column="1"
                           Margin="7,9,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top" />

                <ItemsControl Grid.Row="1"
                              Grid.Column="1"
                              ItemsSource="{Binding CalificacionEstrellas}"
                              Height="36"
                              Margin="76,44,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top" Width="326">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="/Imagenes/EstrellaLlena.png" Width="30" Height="30"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Fecha:"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Grid.Row="2"
                           Grid.Column="1"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top" />
                <TextBlock Text="{Binding Fecha, StringFormat='dd/MM/yyyy'}"
                           FontSize="24"
                           Foreground="White"
                           Grid.Row="2"
                           Grid.Column="1"
                           Margin="63,34,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top" Width="266" />

                <TextBlock Text="Mi opinión:"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Grid.Row="3"
                           Grid.Column="1"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top" />

                <TextBox Text="{Binding Opinion}"
                         Width="Auto"
                         Height="Auto"
                         Grid.Row="3"
                         Grid.Column="1"
                         Margin="20,43,20,27"
                         FontSize="14"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" Grid.RowSpan="4" />

                <Button Content="Regresar"
                        Width="150"
                        Background="Red"
                        Foreground="White"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                        Grid.Row="7"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,20,0,20"
                        Click="Cancelar_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>