<Window x:Class="GameLogEscritorio.Ventanas.VentanaCodigoDeRecuperacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
        mc:Ignorable="d"
        Title="Recuperación de contraseña"
        Height="270" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/fondoazul.png" Stretch="Fill"/>
        </Grid.Background>

        <Border Background="#800C3C5C" CornerRadius="0" Padding="20" Margin="10">
            <Grid>
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#F2F2F1"/>
                        <Setter Property="FontFamily" Value="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"/>
                    </Style>
                </Grid.Resources>

                <Grid x:Name="grd_Codigo">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/> 
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Recuperación de contraseña"
                               FontSize="21"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>

                    <TextBlock Text="Introducir código de verificación enviado a su correo:"
                               Grid.Row="1"
                               FontSize="11"
                               Margin="0,10,0,5"
                               HorizontalAlignment="Left"/>

                    <TextBox x:Name="txtb_Codigo"
                             Grid.Row="2"
                             Height="30"
                             FontSize="14"
                             Margin="0,0,0,10" MaxLength="6"/>

                    <TextBlock x:Name="txt_ErrorCodigo"
                       Grid.Row="3"
                       Text="Código de verificación inválido"
                       Foreground="Yellow"
                       FontSize="11"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>


                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Verificar"
                                Width="150"
                                Margin="0,0,10,0"
                                Background="Green"
                                Foreground="White"
                                FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                                Click="Verificar_Click"/>

                        <Button Content="Cancelar"
                                Width="150"
                                Background="Red"
                                Foreground="White"
                                FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                                Click="Cancelar_Click"/>
                    </StackPanel>
                </Grid>

                <Grid x:Name="grd_NuevaContrasenia" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Nueva contraseña"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>

                    <TextBlock Text="Ingrese su nueva contraseña:"
                               Grid.Row="1"
                               FontSize="16"
                               Margin="0,10,0,5"
                               HorizontalAlignment="Left"/>

                    <PasswordBox x:Name="pb_NuevaContrasenia"
                                 Grid.Row="2"
                                 Height="30"
                                 FontSize="14"
                                 Margin="0,0,0,10"/>

                    <TextBlock x:Name="txt_ErrorContraseña"
                               Grid.Row="3"
                               Text="Contraseña inválida, inténtelo de nuevo"
                               Foreground="Yellow"
                               FontSize="11"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Aceptar"
                                Width="150"
                                Margin="0,0,10,0"
                                Background="Green"
                                Foreground="White"
                                FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                                Click="Aceptar_Click"/>

                        <Button Content="Cancelar"
                                Width="150"
                                Background="Red"
                                Foreground="White"
                                FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                                Click="Cancelar_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
