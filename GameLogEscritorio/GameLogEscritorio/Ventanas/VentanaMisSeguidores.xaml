<Window x:Class="GameLogEscritorio.Ventanas.VentanaMisSeguidores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
        mc:Ignorable="d"
        Title="VentanaMisSeguidores" Height="600" Width="920">
    <Grid>
        <Border Background="#0C3C5C" Opacity="0.9"/>

        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Imagenes/FondoInterfaces.png" Stretch="UniformToFill"/>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#23588A" CornerRadius="5,5,0,0">
                    <Grid>
                        <TextBlock Text="MIS SEGUIDORES" 
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   TextAlignment="Right"
                                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                                   VerticalAlignment="Center" Margin="15,0"/>

                        <Button x:Name="btnClose" Content="Regresar"
                                Width="80" Height="30"
                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                Margin="15,0,0,0"
                                Click="Salir_Click"
                                Cursor="Hand"
                                Background="Transparent"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF5F5F5F"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" Margin="20">
                    <StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-16,0,36">
                            <Image Source="/Imagenes/Amarillo/iconoLapizA.png" Width="100" Height="90" Stretch="Uniform"/>
                            <TextBlock Text="MIS SEGUIDORES"
                                       Foreground="#FFC000"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                                       VerticalAlignment="Center" Margin="20,0,0,0"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding Seguidores}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#06203A" Margin="0,5" CornerRadius="15">
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Width="35" Height="35" VerticalAlignment="Center">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding FotoPerfil}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <TextBlock Grid.Column="1" Text="{Binding Nombre}" VerticalAlignment="Center"
                                                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                                                       FontSize="14" Foreground="Yellow" Margin="10,0"/>

                                            <Button Grid.Column="2" Content="ELIMINAR" Width="90" Height="25"
                                                    Margin="10,0" Click="btn_eliminarSeguidor"
                                                    Background="#F44336" Foreground="White"
                                                    FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                                                    Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Border>
    </Grid>
</Window>
