<Window x:Class="GameLogEscritorio.Ventanas.VentanaMisSeguidores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mis Seguidores" d:DesignHeight="600" d:DesignWidth="920"
        ResizeMode="CanResize">

    <Viewbox Stretch="Fill">
        <Grid Height="600" Width="920">
            <Border Background="#0C3C5C" Opacity="0.9"/>

            <Border Margin="0,20,0,-20">
                <Border.Background>
                    <ImageBrush ImageSource="/Imagenes/FondoInterfaces.png" Stretch="UniformToFill"/>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#23588A" CornerRadius="5,5,0,0">
                        <Grid>
                            <TextBlock Text="MIS SEGUIDORES" 
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                               VerticalAlignment="Center" Margin="15,0"/>

                            <Button Content="Regresar" Width="80" Height="30"
                            HorizontalAlignment="Left" VerticalAlignment="Center"
                            Margin="15,0,0,0" Click="Salir_Click"
                            Background="Transparent" Foreground="White"
                            FontSize="14" FontWeight="Bold" Cursor="Hand"/>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,28,0,20">
                                <Button Content="Todos"
                                Width="120" Height="40"
                                Background="#FFD700"
                                FontWeight="Bold" Cursor="Hand"
                                Click="Btn_MostrarTodos_Click"
                                FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"/>
                                <Button Content="Seguidos"
                                Width="130" Height="40"
                                Background="#00CED1"
                                FontWeight="Bold" Cursor="Hand"
                                Click="Btn_MostrarSeguidos_Click"
                                FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"/>
                            </StackPanel>

                            <Image Grid.Column="2"
                           Source="/Imagenes/Amarillo/iconoLapizA.png"
                           Width="137" Height="123"
                           HorizontalAlignment="Right"
                           Margin="0,-2,44,0"/>
                        </Grid>

                        <Grid Grid.Row="1" Margin="20,10,20,20">
                            <ItemsControl x:Name="itemsControlTodos" ItemsSource="{Binding Seguidores}" Visibility="Collapsed">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <Image Source="/Imagenes/PerfilEjemplo.png" Width="40" Height="40" Margin="5"/>
                                            <TextBlock Text="{Binding Nombre}" Foreground="White" FontSize="14" Margin="5"/>
                                            <Button Content="Eliminar" Margin="5" Padding="4,2"
                                            Command="{Binding DataContext.EliminarSeguidorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <ItemsControl x:Name="itemsControlSeguidos" ItemsSource="{Binding Seguidos}" Visibility="Collapsed">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <Image Source="/Imagenes/PerfilEjemplo.png" Width="40" Height="40" Margin="5"/>
                                            <TextBlock Text="{Binding Nombre}" Foreground="White" FontSize="14" Margin="5"/>
                                            <Button Content="Eliminar" Margin="5" Padding="4,2"
                                            Command="{Binding DataContext.EliminarSeguidorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</Window>
