<Window x:Class="GameLogEscritorio.Ventanas.VentanaBuscarSocio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
        mc:Ignorable="d"
        Title="Buscar Socio" Height="600" Width="920" Background="Black"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <Border Background="#0C3C5C"/>

        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Imagenes/FondoInterfaces.png" Stretch="Fill"/>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="#23588A">
                    <Button Content="Salir"
                            Width="80"
                            Height="25"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,2,10,2"
                            Click="Salir_Click"
                            Cursor="Hand"
                            Background="Transparent"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="DemiBold"
                            FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0C3C5C"/>
                                        <Setter Property="Foreground" Value="#FF5F5F5F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Grid Grid.Row="1" Margin="20,10,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                        <Image Source="/Imagenes/Amarillo/iconoLapizA.png" Width="137" Height="123"/>
                        <Border Background="#FFC000" CornerRadius="10" Padding="10" Margin="20,0">
                            <TextBlock Text="Buscar Jugador"
                                       Foreground="White"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                                       TextAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0,10" HorizontalAlignment="Center">
                        <TextBlock Text="Nombre de usuario"
                                   FontWeight="Bold" FontSize="20"
                                   Foreground="#F2F2F1"
                                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>
                        <TextBlock Text="Para poder buscar uno o más socios, ingrese su nombre de usuario."
                                   FontWeight="Bold" FontSize="16"
                                   Foreground="#F2F2F1"
                                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                                   Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBox x:Name="txb_Busqueda"
                                     Width="319" Height="30"
                                     KeyDown="Buscar_Enter"/>
                            <Button Content="Buscar"
                                    Width="139" Height="45"
                                    Background="Green"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                                    Click="Buscar_Click" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid x:Name="grd_resultadoJugador" Grid.Row="3" Visibility="Collapsed" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image x:Name="img_jugador" Grid.Row="0" Width="320" Height="320" Stretch="Uniform"
                            Source="{Binding imagenPerfil}" ClipToBounds="True" Margin="0,5"/>

                        <TextBlock x:Name="txb_nombreJugador" Grid.Row="1" FontSize="20" FontWeight="Bold" Foreground="Yellow"
                            HorizontalAlignment="Center" TextAlignment="Center" Margin="0,5,0,10"/>

                        <Button Content="Ver perfil" Grid.Row="2" Width="150" Height="40"
                            Background="Blue" Foreground="White" FontWeight="Bold"
                            FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                            Click="Detalles_Click" HorizontalAlignment="Center"/>
                    </Grid>


                    <Button Grid.Row="4" Content="Regresar"
                            Width="176" Height="49"
                            Background="Red"
                            Foreground="White"
                            FontWeight="Bold"
                            FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                            Click="Regresar_Click"
                            HorizontalAlignment="Center" Margin="0,18,0,2"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
