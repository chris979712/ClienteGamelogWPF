<Window x:Class="GameLogEscritorio.Ventanas.VentanaBuscarJugador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
        mc:Ignorable="d"
        Title="Buscar Jugador" Height="600" Width="920" Background="Black"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow" AllowsTransparency="False"
        ResizeMode="NoResize">

    <Window.Effect>
        <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.8" BlurRadius="20"/>
    </Window.Effect>

    <Grid>
        <Border Background="#0C3C5C" Opacity="0.9"/>
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Imagenes/FondoInterfaces.png" Stretch="UniformToFill"/>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="#23588A" CornerRadius="5,5,0,0">
                    <Grid>
                        <TextBlock Text="BUSCAR JUGADOR" 
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   TextAlignment="Right"
                                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                                   VerticalAlignment="Center" Margin="15,0"/>

                        <Button x:Name="btnClose" Content="Regresar"
                                Width="80" Height="30"
                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                Margin="15,0,0,0"
                                Click="Salir_Click"
                                Cursor="Hand"
                                Background="Transparent"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF5F5F5F"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                <Border Grid.Row="1" Background="#0C3C5C" Opacity="0.8" CornerRadius="0,0,5,5">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-16,0,36">
                            <Image Source="/Imagenes/Amarillo/iconoLapizA.png" Width="100" Height="90" Stretch="Uniform"/>
                            <TextBlock Text="BUSCAR JUGADOR"
                                       Foreground="#FFC000"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                                       VerticalAlignment="Center" Margin="20,0,0,0"/>
                        </StackPanel>
                        <Border Grid.Row="1" Background="#23588A" CornerRadius="10" Padding="15" Margin="0,0,0,40" BorderBrush="#FECA18" BorderThickness="3">
                            <StackPanel>
                                <TextBlock Text="BUSQUEDA DE JUGADOR"
                                           FontWeight="Bold" FontSize="18"
                                           TextAlignment="Center"
                                           Foreground="#FFC000"
                                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>

                                <TextBlock Text="Ingrese el nombre de usuario del jugador que desea buscar"
                                           FontSize="14"
                                           Foreground="White"
                                           TextAlignment="Center"
                                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                                           Margin="0,5,0,15"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBox x:Name="txb_Busqueda"
                                             Width="300" Height="35"
                                             FontSize="14"
                                             Padding="5"
                                             KeyDown="Buscar_Enter"
                                             Background="White"
                                             Foreground="Black"
                                             BorderBrush="#FFC000"
                                             BorderThickness="1"
                                             IsEnabled="True"
                                             FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                                             MaxLength="20">
                                        <TextBox.Resources>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="CornerRadius" Value="3"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>

                                    <Button x:Name="btn_Buscar" Content="BUSCAR"
                                            Width="120" Height="35"
                                            Background="#4CAF50"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            FontSize="14"
                                            Margin="10,0,0,0"
                                            FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                                            Click="Buscar_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.8"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Grid x:Name="grd_resultadoJugador" Grid.Row="2" Visibility="Collapsed" Height="223" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="150" Height="150" 
                                    Background="#23588A" CornerRadius="125" 
                                    Margin="40,16,0,47" Padding="5" BorderBrush="#FFC000" BorderThickness="1">
                                <Image x:Name="img_jugador" 
                                       Stretch="UniformToFill"
                                       MouseDown="AvatarJugador_Click">
                                    <Image.Clip>
                                        <EllipseGeometry Center="70,70" RadiusX="70" RadiusY="70"/>
                                    </Image.Clip>
                                </Image>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="53,0,20,0">
                                <TextBlock x:Name="txb_nombreJugador" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#FFC000"
                                           Margin="0,0,0,20"
                                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>

                                <Button x:Name="btn_VerPerfil" Content="VER PERFIL" 
                                        Width="163" Height="40"
                                        Background="#2196F3" 
                                        Foreground="White" 
                                        FontWeight="Bold"
                                        FontSize="16"
                                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                                        Click="Detalles_Click"
                                        HorizontalAlignment="Left">
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="0.8"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>