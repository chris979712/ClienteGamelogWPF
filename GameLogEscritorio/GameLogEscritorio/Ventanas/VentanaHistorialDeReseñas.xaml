<Window x:Class="GameLogEscritorio.Ventanas.VentanaHistorialDeReseñas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
        mc:Ignorable="d"
        Title="Historial De Reseñas" Height="600" Width="920"
       Background="Black"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Border Background="#0C3C5C">
        <Grid>
            <Image Source="/Imagenes/FondoInterfaces.png"
                   Stretch="Fill"
                   Panel.ZIndex="-1"/>

            <DockPanel Height="30" VerticalAlignment="Top" Background="#23588A">
                <Button Content="Salir"
                        FontSize="14"
                        FontWeight="DemiBold"
                        Width="80"
                        Height="25"
                        Margin="0,2,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="Salir_Click"
                        Background="Transparent"
                        Foreground="White"
                        Cursor="Hand"
                        DockPanel.Dock="Right">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0C3C5C"/>
                                    <Setter Property="Foreground" Value="#FF5F5F5F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </DockPanel>

            <Grid Margin="20,40,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Imagenes/Amarillo/iconoLapizA.png"
                           Width="137" Height="123"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,0,0,10"/>

                    <Border Grid.Column="1"
                            Background="#FFC000"
                            CornerRadius="10"
                            Padding="10"
                            Height="98"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="10,10,10,10">
                        <TextBlock Text="Historial de reseñas"
                                   Foreground="White"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"/>
                    </Border>
                </Grid>

                <ScrollViewer Grid.Row="1"
                              Margin="0,20,0,20"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ItemsResenas" ItemsSource="{Binding}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}" Width="150" Height="200" Margin="10" Stretch="UniformToFill"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Button Grid.Row="2"
                        Content="Regresar"
                        Width="150"
                        Height="40"
                        Background="Red"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        FontWeight="Bold"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                        Click="Cancelar_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
