<Window x:Class="GameLogEscritorio.Ventanas.MenuPrincipal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:extensiones="clr-namespace:GameLogEscritorio.Extensiones"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignWidth="920" d:DesignHeight="600"
    Title="GAMELOG" 
    Background="Black"
    WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <FontFamily x:Key="FuenteOCR">pack://application:,,,/GameLogEscritorio;component/Fuentes/Anchox Sport</FontFamily>
    </Window.Resources>

    <Viewbox Stretch="Fill">
        <Border CornerRadius="25">
            <Border.Background>
                <ImageBrush ImageSource="/Imagenes/fondoazul.PNG" 
                    Stretch="UniformToFill" 
                    Opacity="0.9"/>
            </Border.Background>
            <Grid>


                <Grid Grid.Row="1" Margin="80,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Imagenes/FondoInterfaces.png" 
               Stretch="UniformToFill"
               Opacity="0"
               Grid.ColumnSpan="2"/>

                    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Column="0">
                        <TextBlock Text="Game Log"
                   FontSize="40"
                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                   TextAlignment="Center"
                   FontWeight="DemiBold"
                   Foreground="Black"/>
                        <TextBlock x:Name="txt_Jugador" Text="Bienvenido jugador"
                   TextAlignment="Center"
                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                   FontSize="35"
                   FontWeight="SemiBold"
                   Foreground="Black"/>
                    </StackPanel>

                    <Image x:Name="img_FotoDePerfil"
               Grid.Column="1"
               Margin="6,38,0,0"
               Width="120"
               Height="120"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               ClipToBounds="True"
               Stretch="UniformToFill"/>

                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" >
                        <TextBlock x:Name="txtbl_JuegosPendientes"
               FontSize="30"
               Foreground="Black"
               FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
               TextAlignment="Center"
               Text="Juegos pendientes por reseñar"
               Margin="35,20"/>
                        <StackPanel>
                            <TextBlock x:Name="txt_SinJuegos"
                       Text="De momento no hay ningún juego registrado como pendiente :("
                       FontSize="25"
                       Foreground="Black"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="20"
                       Visibility="Collapsed"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Foreground" Value="Transparent"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ScrollBar">
                                                    <Grid Background="Transparent">
                                                        <Track Name="PART_Track" IsDirectionReversed="true">
                                                            <Track.Thumb>
                                                                <Thumb Background="Black" />
                                                            </Track.Thumb>
                                                        </Track>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ScrollViewer.Resources>
                                <ItemsControl x:Name="ic_JuegosPendientes" Margin="20">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel IsItemsHost="True" Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderThickness="2"
                                            BorderBrush="Black"
                                            Margin="15"
                                            CornerRadius="15"
                                            Width="200"
                                            Height="200">
                                                <StackPanel>
                                                    <Image Source="{Binding imagenFondo}"
                                                   Stretch="Uniform"
                                                   Width="190"
                                                   Height="150"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Top"
                                                   Cursor="Hand"
                                                   MouseDown="IrAVentanaeseñarJuego_Click"
                                                   Margin="10"/>
                                                    <TextBlock Text="{Binding nombre}"
                                                       TextWrapping="Wrap"
                                                       TextAlignment="Center"
                                                       FontWeight="Bold"
                                                       Margin="5,5,0,5"
                                                       FontSize="12"
                                                       MaxHeight="40"
                                                       Foreground="Black"
                                                       TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" 
                    Width="80"
                    HorizontalAlignment="Left">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#345685" Offset="0.0"/>
                            <GradientStop Color="#3465A4" Offset="0.5"/>
                            <GradientStop Color="#BDCDD1" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width"
                                         To="250" Duration="0:0:0.3"
                                         AccelerationRatio="0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width"
                                         To="80" Duration="0:0:0.3"
                                         AccelerationRatio="0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Grid.Triggers>

                    <Image Source="/Imagenes/Negro/logoGrandeN.png"
               Width="80"
               Margin="0,20,0,20"
               VerticalAlignment="Top"/>

                    <ScrollViewer
                      Margin="0,120,0,0"
                      VerticalAlignment="Stretch"
                      VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <Button Style="{StaticResource BotonMenuPrincipal}"
                        Tag="/Imagenes/icono_videojuego.png"
                        HorizontalContentAlignment="Center"
                        Click="IrVentanaBuscarJuego_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock x:Name="TextoBotonBU"
                                       Text=""
                                       VerticalAlignment="Center"
                                       Opacity="0"/>
                                        <TextBlock Text="" Width="70"/>
                                    </StackPanel>
                                </Button.Content>

                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <StringAnimationUsingKeyFrames Storyboard.TargetName="TextoBotonBU"
                                                                   Storyboard.TargetProperty="Text">
                                                    <DiscreteStringKeyFrame KeyTime="0:0:0" Value="Buscar&#x0a;juego"/>
                                                </StringAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonBU"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonBU"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0" Duration="0:0:0"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>

                            <Button Style="{StaticResource BotonMenuPrincipal}"
                        HorizontalContentAlignment="Center"
                        Tag="/Imagenes/icono_lupa.png"
                        Click="IrVentanaBuscarUsuario_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock x:Name="TextoBotonBUU"
                                       Text=""
                                       VerticalAlignment="Center"
                                       Opacity="0"/>
                                        <TextBlock Text="" Width="70"/>
                                    </StackPanel>
                                </Button.Content>

                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <StringAnimationUsingKeyFrames Storyboard.TargetName="TextoBotonBUU"
                                                                   Storyboard.TargetProperty="Text">
                                                    <DiscreteStringKeyFrame KeyTime="0:0:0" Value="Buscar&#x0a;usuario"/>
                                                </StringAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonBUU"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonBUU"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0" Duration="0:0:0"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>

                            <Button Style="{StaticResource BotonMenuPrincipal}"
                        Tag="/Imagenes/icono_usuario.png"
                        HorizontalContentAlignment="Center"
                        Click="IrVentanaEditarPerfil_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock x:Name="TextoBotonEP"
                                       Text=""
                                       VerticalAlignment="Center"
                                       Opacity="0"/>
                                        <TextBlock Text="" Width="70"/>
                                    </StackPanel>
                                </Button.Content>

                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <StringAnimationUsingKeyFrames Storyboard.TargetName="TextoBotonEP"
                                                                   Storyboard.TargetProperty="Text">
                                                    <DiscreteStringKeyFrame KeyTime="0:0:0" Value="Editar&#x0a;perfil"/>
                                                </StringAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonEP"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonEP"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0" Duration="0:0:0"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>

                            <Button Style="{StaticResource BotonMenuPrincipal}"
                        Tag="/Imagenes/icono_miReseña.png"
                        HorizontalContentAlignment="Center"
                        Click="IrVentanaMisReseñas_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock x:Name="TextoBotonMR"
                                       Text=""
                                       VerticalAlignment="Center"
                                       Opacity="0"/>
                                        <TextBlock Text="" Width="70"/>
                                    </StackPanel>
                                </Button.Content>

                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <StringAnimationUsingKeyFrames Storyboard.TargetName="TextoBotonMR"
                                                                   Storyboard.TargetProperty="Text">
                                                    <DiscreteStringKeyFrame KeyTime="0:0:0" Value="Mis&#x0a;reseñas"/>
                                                </StringAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonMR"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonMR"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0" Duration="0:0:0"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>

                            <Button Style="{StaticResource BotonMenuPrincipal}"
                        Tag="/Imagenes/estadisticas.png"
                        HorizontalContentAlignment="Center"
                        Click="IrVentanaTendencias_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock x:Name="TextoBotonTN"
                                       Text=""
                                       VerticalAlignment="Center"
                                       Opacity="0"/>
                                        <TextBlock Text="" Width="70"/>
                                    </StackPanel>
                                </Button.Content>

                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <StringAnimationUsingKeyFrames Storyboard.TargetName="TextoBotonTN"
                                                                   Storyboard.TargetProperty="Text">
                                                    <DiscreteStringKeyFrame KeyTime="0:0:0" Value="Tendencias"/>
                                                </StringAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonTN"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonTN"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0" Duration="0:0:0"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>

                            <Button Style="{StaticResource BotonMenuPrincipal}"
                            Tag="/Imagenes/icono_usuarios.png"
                            HorizontalContentAlignment="Center"
                            Click="IrVentanaSeguidores_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock x:Name="TextoBotonSG"
                                           Text=""
                                           VerticalAlignment="Center"
                                           Opacity="0"/>
                                        <TextBlock Text="" Width="70"/>
                                    </StackPanel>
                                </Button.Content>

                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <StringAnimationUsingKeyFrames Storyboard.TargetName="TextoBotonSG"
                                           Storyboard.TargetProperty="Text">
                                                    <DiscreteStringKeyFrame KeyTime="0:0:0" Value="Segudidores"/>
                                                </StringAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonSG"
                             Storyboard.TargetProperty="Opacity"
                             To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonSG"
                             Storyboard.TargetProperty="Opacity"
                             To="0" Duration="0:0:0"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>

                            <Button Style="{StaticResource BotonMenuPrincipal}"
                            Tag="/Imagenes/salida.png"
                            HorizontalContentAlignment="Center"
                            VerticalAlignment="Bottom" Click="CerrarSesion_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock x:Name="TextoBotonCerrarSesion"
                               Text=""
                               VerticalAlignment="Center"
                               Opacity="0"/>
                                        <TextBlock Text="" Width="70"/>
                                    </StackPanel>
                                </Button.Content>

                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <StringAnimationUsingKeyFrames Storyboard.TargetName="TextoBotonCerrarSesion"
                                                                       Storyboard.TargetProperty="Text">
                                                    <DiscreteStringKeyFrame KeyTime="0:0:0" Value="Cerrar Sesión"/>
                                                </StringAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonCerrarSesion"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="TextoBotonCerrarSesion"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0" Duration="0:0:0"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Viewbox>
</Window>
