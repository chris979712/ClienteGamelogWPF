<Window x:Class="GameLogEscritorio.Ventanas.VentanaEditarPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Editor Portal" Height="600" Width="800" ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FECA18"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BotonConBorde" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                            CornerRadius="8" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BotonRegistrar" BasedOn="{StaticResource BotonConBorde}" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#1B5E20"/>
        </Style>
        <Style x:Key="BotonCancelar" BasedOn="{StaticResource BotonConBorde}" TargetType="Button">
            <Setter Property="Background" Value="#C62828"/>
            <Setter Property="BorderBrush" Value="#8E0000"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/Editar_Perfil.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="EDITAR PERFIL"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Grid.Row="0"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            <Border Grid.Column="0"
                    Grid.Row="1"
                    Grid.RowSpan="4"
                    Width="200"
                    Height="250"
                    Margin="0,0,40,20"
                    CornerRadius="10"
                    Background="#33333399">
                <StackPanel VerticalAlignment="Center">
                    <Image x:Name="imgPerfil" 
                           Width="150" 
                           Height="150" 
                           Margin="0,0,0,20"
                           Stretch="Uniform"/>

                    <Button x:Name="btnSeleccionarImagen"
                            Content="ELEGIR IMAGEN"
                            Width="170"
                            Height="40"
                            Background="#FECA18"
                            Foreground="#0C3C5C"
                            FontWeight="Bold"
                            FontSize="14"
                            Click="btnSeleccionarImagen_Click"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1" Margin="0,49,0,33" Grid.RowSpan="2">
                <TextBlock Text="Nombre:"
                           FontSize="18"
                           Foreground="White"
                           Margin="0,0,0,5" Width="442"/>

                <TextBox x:Name="txtb_Nombre"
                         Height="35"
                         Style="{StaticResource RoundedTextBox}"
                         Width="454"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,39,0,50" Grid.RowSpan="2">
                <TextBlock Text="Primer apellido:"
                           FontSize="18"
                           Foreground="White"
                           Margin="0,0,0,5" Width="453"/>

                <TextBox x:Name="txtb_PrimerApellido"
                         Height="35"
                         FontSize="16" Width="457"
                         Style="{StaticResource RoundedTextBox}"
                         />
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="2" Margin="0,28,0,64" Grid.RowSpan="2">
                <TextBlock Text="Segundo apellido:"
                           FontSize="18"
                           Foreground="White"
                           Margin="0,0,0,5" Width="454"/>

                <TextBox x:Name="txtb_SegundoApellido"
                         Height="35"
                         Width="458"
                         Style="{StaticResource RoundedTextBox}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="3" Margin="0,18,0,76" Grid.RowSpan="2">
                <TextBlock Text="Nombre de usuario:"
                           FontSize="18"
                           Foreground="White"
                           Margin="0,0,0,5" RenderTransformOrigin="0.5,0.5" Width="456">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.015"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <TextBox x:Name="txtb_NombreUsuario"
                         Height="35"
                         Width="458"
                         Style="{StaticResource RoundedTextBox}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="3" Margin="0,83,0,13" Grid.RowSpan="2">
                <TextBlock Text="Descripción:"
                           FontSize="18"
                           Foreground="White"
                           Margin="0,0,0,5" Width="456"/>

                <TextBox x:Name="txtb_Descripcion"
                         Height="100"
                         Style="{StaticResource RoundedTextBox}"
                         FontSize="16"
                         TextWrapping="Wrap"
                         AcceptsReturn="True" Width="465"/>
            </StackPanel>
            <StackPanel Grid.Column="1"
                        Grid.Row="7"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button Content="ACTUALIZAR"
                        Width="150"
                        Height="40"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,20,0"/>

                <Button Content="CANCELAR"
                        Width="150"
                        Height="40"
                        Background="#F44336"
                        Foreground="White"
                        FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>