<Window x:Class="GameLogEscritorio.Ventanas.VentanaEditarPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
        mc:Ignorable="d"
        Title="Editar Perfil" Height="600" Width="920" ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/Editar_Perfil.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto" MinWidth="290"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Nombre:"
                       FontSize="20"
                       FontWeight="Bold"
                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                       Foreground="White"
                       Grid.Column="2"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,10,0,0" Height="24" Width="104"/>
            <TextBox x:Name="txtb_Nombre"
                     Width="180"
                     Grid.Column="2"
                     Grid.Row="2"
                     MaxLength="75"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" Height="37" Margin="98,0,0,0"/>
            <TextBlock Text="Nombre de usuario:"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                       Grid.Column="2"
                       Grid.Row="5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="24" Width="265" Grid.ColumnSpan="2" Margin="106,0,0,0"/>
            <TextBox x:Name="txtb_NombreUsuario"
                     Width="276"
                     Grid.Column="3"
                     Grid.Row="5"
                     MaxLength="10"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top" Height="37" Margin="70,0,0,0" Grid.ColumnSpan="2"/>
            <TextBlock Text="Contraseña:"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                       Grid.Column="2"
                       Grid.Row="7"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="106,77,0,0" Height="24" Width="162"/>
            <TextBox x:Name="txtb_Contrasenia"
                     Width="240"
                     Grid.Column="2"
                     Grid.Row="9"
                     MaxLength="40"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top" Height="37" Grid.ColumnSpan="2" Margin="106,0,0,0"/>
            <Button Content="Registrar"
                    Width="150"
                    Background="Green"
                    Foreground="White"
                    FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                    Grid.Column="2"
                    Grid.Row="10"
                    Click="Registrar_Click"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0" Height="37"/>
            <Button x:Name="btnSeleccionarImagen"
                    Content="Elegir Imagen"
                    Width="170"
                    Height="51"
                    Background="#FECA18"
                    Foreground="#0C3C5C"
                    FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                    FontWeight="Bold"
                    Grid.Column="1"
                    Grid.Row="9"
                    Click="btnSeleccionarImagen_Click"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                Foreground="White"
                Grid.Column="2"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="53"
                Width="200"
                TextWrapping="Wrap"
                TextAlignment="Center" Grid.ColumnSpan="2" Margin="278,0,0,0"><Run Text="Primer"/><LineBreak/><Run Text="apellido:"/></TextBlock>
            <TextBox x:Name="txtb_PrimerApellido"
                     Width="180"
                     Grid.Column="2"
                     Grid.Row="2"
                     MaxLength="50"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" Height="37" Grid.ColumnSpan="2" Margin="292,0,0,0"/>
            <TextBlock Text="Correo:"
                       FontSize="20"
                       FontWeight="Bold"
                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                       Foreground="White"
                       Grid.Column="2"
                       Grid.Row="6"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Height="24" Width="104" Margin="108,23,0,0" Grid.RowSpan="2"/>
            <TextBox x:Name="txtb_Descipcion"
                     Width="300"
                     Height="120"
                     Grid.Column="3"
                     Grid.Row="7"
                     MaxLength="3"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     TextWrapping="Wrap"
                     AcceptsReturn="True" Margin="26,0,0,0" Grid.ColumnSpan="2"/>
            <Button Content="Cancelar"
                    Width="150"
                    Background="Red"
                    Foreground="White"
                    FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                    Grid.Column="3"
                    Grid.Row="10"
                    Click="Cancelar_Click"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0" Height="37"/>

            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                Foreground="White"
                Grid.Column="3"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                TextWrapping="Wrap"
                TextAlignment="Center"
                Height="53"
                Width="200"
                Margin="146,0,0,0" Grid.ColumnSpan="2"><Run Text="Segundo"/><LineBreak/><Run Text="apellido:"/></TextBlock>
            <TextBox x:Name="txtb_SegundoApellido"
                     Width="172"
                     Grid.Column="3"
                     Grid.Row="2"
                     MaxLength="50"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" Height="37" Grid.ColumnSpan="2" Margin="174,0,0,0"/>
            <TextBox x:Name="txtb_CorreoElectronico"
                     Width="210"
                     Grid.Column="2"
                     Grid.Row="7"
                     MaxLength="255"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top" Height="36" Margin="107,36,0,0"/>
            <TextBlock Text="Descripción:"
                       FontSize="20"
                       FontWeight="Bold"
                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                       Foreground="White"
                       Grid.Column="3"
                       Grid.Row="5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       RenderTransformOrigin="4.752,0.481" Height="24" Margin="0,36,0,0" Grid.RowSpan="2" Width="177"/>
        </Grid>
    </Grid>
</Window>