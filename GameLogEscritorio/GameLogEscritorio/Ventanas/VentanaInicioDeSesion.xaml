<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
    xmlns:extensiones="clr-namespace:GameLogEscritorio.Extensiones"
    x:Class="GameLogEscritorio.Ventanas.VentanaInicioDeSesion"
    Title="VentanaInicioDeSesion"
    Width="920" Height="600"
    ResizeMode="NoResize"
    Background="Black"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
>


    <Window.Resources>
        <FontFamily x:Key="FuenteOCR">pack://application:,,,/GameLogEscritorio;component/Fuentes/Anchox Sport</FontFamily>
    </Window.Resources>

    <Viewbox Stretch="Fill">
        <Grid Width="920" Height="600">
            <Image Source="/Imagenes/InicioSesion.png" Stretch="Fill" />

            <Grid Margin="475,283,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#80000000">
                <StackPanel >
                    <TextBox x:Name="txtb_Correo"
                             extensiones:TextBoxExtensiones.TextoSugerido="Correo"
                             FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                             Width="204" Height="30" FontSize="16" Margin="0,5"/>

                    <Grid Width="204" Height="34" Margin="0,5">
                        <TextBlock x:Name="txtb_Sugerencia" Text="Contraseña" FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                         FontSize="16"
                         Padding="10,0,40,0"  Margin="6,10,29,2"/>
                        <PasswordBox x:Name="pb_Contrasenia"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                       PasswordChanged="PasswordVisible"
                       Background="Transparent"
                        GotFocus="TextoSugeridoGtFocus"
                        LostFocus="TextoSugeridoLosFocus"
                        FontSize="16"
                        Padding="10,0,40,0"
                        Visibility="Visible" />

                       

                        <TextBox x:Name="txtb_Contrasenia"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                            Background="Transparent"
                        FontSize="16"
                        Padding="10,0,40,0"
                        Visibility="Collapsed" Margin="0,0,35,-3" />

                        <ToggleButton x:Name="tbtn_VisibilidadContrasenia"
                        Width="30"
                        Height="30"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,5,0"
                        Checked="CambiarVisibilidadContrasenia"
                        Unchecked="CambiarVisibilidadContrasenia">
                            <Image x:Name="img_Visibilidad"
                            Width="20"
                            Height="20"
                            Source="/Imagenes/Iconos/IconoNoVisibleOscuro.png" />
                            </ToggleButton>
                    </Grid>


                    <TextBlock Text="Recuperar contraseña"
                               FontSize="13" FontWeight="DemiBold"
                               TextDecorations="Underline"
                               FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                               Foreground="#f4d03f"
                               Cursor="Hand"
                               HorizontalAlignment="Center" Margin="0,5"
                               MouseLeftButtonDown="IrVentanaRecuperarContraseña"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Button Content="Iniciar sesión"
                                Width="103" Height="34"
                                FontSize="13"
                                FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                                Background="#FFC000"
                                Foreground="Black"
                                Click="IniciarSesion_Click" Margin="5,0"/>

                        <Button Content="Crear cuenta"
                                Width="101" Height="35"
                                FontSize="13"
                                FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                                Background="#F2F2F1"
                                Foreground="Black"
                                Click="CrearCuenta_Click" Margin="5,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
