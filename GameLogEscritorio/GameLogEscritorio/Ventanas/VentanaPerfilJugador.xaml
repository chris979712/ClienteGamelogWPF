<Window x:Class="GameLogEscritorio.Ventanas.VentanaPerfilJugador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
        mc:Ignorable="d"
        Title="Perfil Jugador" Height="650" Width="920" Background="Black"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/FondoInterfaces.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Background="#23588A" CornerRadius="5,5,0,0">
            <Grid>
                <TextBlock Text="PERFIL JUGADOR" 
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           TextAlignment="Right"
                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                           VerticalAlignment="Center" Margin="15,0"/>

                <Button x:Name="btnClose" Content="Regresar"
                        Width="80" Height="30"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                        Margin="15,0,0,0"
                        Click="Salir_Click"
                        Cursor="Hand"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF5F5F5F"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image x:Name="logo"
                   Width="137"
                   Height="123"
                   Grid.Row="0"
                   Grid.Column="0"
                   Margin="40,30,0,0"
                   Stretch="UniformToFill"
                   Source="/Imagenes/Amarillo/iconoLapizA.png"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />

            <Border Background="#FFC000"
                    CornerRadius="10"
                    Padding="10"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="Auto"
                    MaxWidth="454"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20,48,0,0">
                <TextBlock x:Name="txt_NombreUsuario"
                           Text="{Binding nombreDeUsuario}"
                           Foreground="White"
                           FontSize="33"
                           FontWeight="Bold"
                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                           TextAlignment="Center"
                           VerticalAlignment="Center" Width="439"/>
            </Border>

            <Image x:Name="img_FotoPerfil"
                   Source="{Binding fotoDePerfil}"
                   Width="174"
                   Height="158"
                   Stretch="UniformToFill"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   ClipToBounds="True"
                   Grid.Row="1"
                   Grid.Column="0"
                   Margin="24,20,0,0"/>

            <StackPanel Grid.Row="1" Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Top">
                <TextBlock Text="Nombre:"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="#F2F2F1"
                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>
                <TextBlock x:Name="txt_NombreCompleto"
                           Text="{Binding nombre}"
                           FontSize="14"
                           Foreground="White"
                           Margin="0,0,0,10" Height="27"
                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>

                <TextBlock Text="Descripción:"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="#F2F2F1"
                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>
                <Border BorderBrush="#F2F2F1" BorderThickness="1" CornerRadius="5" Padding="5" Width="507">
                    <TextBlock x:Name="txt_Descripcion"
                               Text="{Binding Descripcion}"
                               FontSize="14"
                               Foreground="White"
                               TextWrapping="Wrap"
                               MinHeight="80"
                               FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>
                </Border>
            </StackPanel>

            <Label Content="Videojuegos Favoritos"
                   FontWeight="Bold"
                   FontSize="20"
                   Foreground="#F2F2F1"
                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                   Grid.Row="3"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20,8,0,0"/>

            <Rectangle Height="1"
                       Fill="White"
                       Grid.Row="4"
                       Grid.Column="0"
                       Grid.ColumnSpan="3"
                       VerticalAlignment="Top"
                       Margin="20,10,0,0"/>

            <TextBlock x:Name="txt_SinJuegosFavoritos"
                       Grid.Row="5"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Text="Este usuario no cuenta con juegos favoritos"
                       FontSize="18"
                       Foreground="#FFC000" Height="27"
                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std" Width="562"
                       Visibility="Collapsed"/>

            <ItemsControl x:Name="ic_JuegosFavoritos" Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top" 
                    Visibility="Collapsed">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Margin="74,5,0,0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="{Binding imagenFondo}"
                                   Width="150"
                                   Height="150"
                                   Stretch="Uniform"
                                   ClipToBounds="True"
                                   Margin="10,0"/>
                            <TextBlock Text="{Binding nombre}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="10,5,10,0"
                                   FontWeight="Bold"
                                   FontSize="12"
                                   Foreground="#FECA18"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" Grid.Row="1">
                <Button x:Name="btn_Banear" Content="Banear"
                        Width="143"
                        Background="Red"
                        Foreground="White"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                        Click="Banear_Click"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"/>
                <Button x:Name="btn_Desbanear" Content="Desbanear"
                        Width="143"
                        Background="Green"
                        Foreground="White"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                        Click="Desbanear_Click"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Visibility="Collapsed"/>
                <Button x:Name="btn_Seguir"  Content="Seguir"
                        Width="143"
                        Background="#23588A"
                        Foreground="White"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                        Click="Seguir_Click"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"/>
                <Button x:Name="btn_DejarDeSeguir" Content="Dejar de seguir"
                        Width="143"
                        Background="#23588A"
                        Foreground="White"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                        Click="DejarDeSeguir_Click"
                        Margin="0,10,0,10"
                        FontSize="17"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>