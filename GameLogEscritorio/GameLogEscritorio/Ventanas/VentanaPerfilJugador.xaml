<Window x:Class="GameLogEscritorio.Ventanas.VentanaPerfilJugador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
        mc:Ignorable="d"
        Title="Perfil Jugador" Height="650" Width="920" Background="Black"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/FondoInterfaces.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Canvas Background="#23588A" Grid.Row="0" Grid.Column="0">
            <Button Content="Salir"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Width="80"
                    Height="25"
                    Canvas.Right="10"
                    Canvas.Top="2"
                    Cursor="Hand"
                    Click="Salir_Click"
                    Background="Transparent"
                    Foreground="White">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0C3C5C"/>
                                <Setter Property="Foreground" Value="#FF5F5F5F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Canvas>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image x:Name="logo"
                   Width="137"
                   Height="123"
                   Grid.Row="0"
                   Grid.Column="0"
                   Margin="40,30,0,0"
                   Stretch="UniformToFill"
                   Source="/Imagenes/Amarillo/iconoLapizA.png"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />

            <Border Background="#FFC000"
                    CornerRadius="10"
                    Padding="10"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="Auto"
                    MaxWidth="454"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20,48,0,0">
                <TextBlock Text="Perfil"
                           Foreground="White"
                           FontSize="42"
                           FontWeight="Bold"
                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                           TextAlignment="Center"
                           VerticalAlignment="Center" Width="439"/>
            </Border>

            <Image x:Name="img_FotoPerfil"
                   Source="{Binding rutaFotoPerfil}"
                   Width="174"
                   Height="158"
                   Stretch="UniformToFill"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   ClipToBounds="True"
                   Grid.Row="1"
                   Grid.Column="0"
                   Margin="24,20,0,0"/>

            <Label Content="Descripcion"
                   FontWeight="Bold"
                   FontSize="20"
                   Foreground="#F2F2F1"
                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                   Grid.Row="1"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Height="147" Width="532" Margin="30,10,0,0"/>

            <Label Content="Videojuegos Favoritos"
                   FontWeight="Bold"
                   FontSize="20"
                   Foreground="#F2F2F1"
                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                   Grid.Row="3"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20,8,0,0"/>

            <Rectangle Height="1"
                       Fill="White"
                       Grid.Row="4"
                       Grid.Column="0"
                       Grid.ColumnSpan="3"
                       VerticalAlignment="Top"
                       Margin="20,10,0,0"/>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="5"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="74,5,0,0">
                <Image x:Name="img_Favorito1"
                       Source="{Binding rutaPortada}"
                       Width="163"
                       Height="208"
                       Stretch="UniformToFill"
                       ClipToBounds="True"
                       Margin="10,0"/>
                <Image x:Name="img_Favorito2"
                       Source="{Binding rutaPortada}"
                       Width="163"
                       Height="208"
                       Stretch="UniformToFill"
                       ClipToBounds="True"
                       Margin="20,0"/>
                <Image x:Name="img_Favorito3"
                       Source="{Binding rutaPortada}"
                       Width="163"
                       Height="208"
                       Stretch="UniformToFill"
                       ClipToBounds="True"
                       Margin="20,0"/>
                <Image x:Name="img_Favorito4"
                       Source="{Binding rutaPortada}"
                       Width="163"
                       Height="208"
                       Stretch="UniformToFill"
                       ClipToBounds="True"
                       Margin="20,0"/>
            </StackPanel>

            <StackPanel
                        Grid.Column="2"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center" Grid.Row="1">
                <Button Content="Bannear"
                        Width="150"
                        Background="Red"
                        Foreground="White"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                        Click="Banear_Click"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"/>
                <Button Content="Seguir"
                        Width="150"
                        Background="#23588A"
                        Foreground="White"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                        Click="Seguir_Click"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"/>
                <Button Content="Regresar"
                        Width="150"
                        Background="Red"
                        Foreground="White"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                        Click="Regresar_Click"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>