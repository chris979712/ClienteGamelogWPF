<Window x:Class="GameLogEscritorio.Ventanas.VentanaBuscarJuego"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buscar Juego" Height="600" Width="920" ResizeMode="NoResize"
        Background="Black" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Border Background="#0C3C5C" />
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Imagenes/FondoInterfaces.png" Stretch="Fill"/>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="#23588A">
                    <Button Content="Salir"
                            Width="80" Height="25" Margin="0,2,10,2"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Click="Salir_Click" Cursor="Hand"
                            Background="Transparent" Foreground="White"
                            FontSize="14" FontWeight="DemiBold"
                            FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0C3C5C"/>
                                        <Setter Property="Foreground" Value="#FF5F5F5F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Grid Grid.Row="1" Margin="20,10,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="/Imagenes/Amarillo/iconoLapizA.png" Width="137" Height="123"/>
                        <Border Background="#FFC000" CornerRadius="10" Padding="10" Margin="20,0">
                            <TextBlock Text="Buscar Juego"
                                       Foreground="White" FontSize="42" FontWeight="Bold"
                                       FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0,20,0,20" HorizontalAlignment="Center">
                        <TextBlock Text="Nombre del videojuego"
                                   FontWeight="Bold" FontSize="20" Foreground="#F2F2F1"
                                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>
                        <TextBlock Text="Por favor ingrese el nombre del videojuego."
                                   FontWeight="Bold" FontSize="17" Foreground="#F2F2F1"
                                   FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                                   Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBox x:Name="txb_Busqueda" Width="336" Height="30"/>
                            <Button x:Name="btn_buscar" Content="Buscar" Width="139" Height="38"
                                    Background="Green" Foreground="White" FontWeight="Bold"
                                    FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                                    Click="Buscar_Click" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid x:Name="grd_resultado" Grid.Row="3" Visibility="Collapsed" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image x:Name="img_juego" Grid.Row="0" Width="320" Height="320" Stretch="Uniform"
                           Source="{Binding backgroundImage}" ClipToBounds="True" Margin="0,5"/>

                        <TextBlock x:Name="txt_nombreJuego" Grid.Row="1" FontSize="20" FontWeight="Bold" Foreground="Yellow"
                            HorizontalAlignment="Center" TextAlignment="Center" Margin="0,5,0,10"/>

                        <Button Content="Ver detalles" Grid.Row="2" Width="150" Height="40"
                            Background="Blue" Foreground="White" FontWeight="Bold"
                            FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                            Click="Detalles_Click" HorizontalAlignment="Center"/>
                    </Grid>

                    <Button Grid.Row="4" Content="Regresar" Width="176" Background="Red" Foreground="White"
                            FontWeight="Bold" FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                            Click="Regresar_Click" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
