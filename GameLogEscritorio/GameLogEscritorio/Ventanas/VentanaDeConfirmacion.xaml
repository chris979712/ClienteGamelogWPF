<Window x:Class="GameLogEscritorio.Ventanas.VentanaDeConfirmacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"
        mc:Ignorable="d"
        d:DesignHeight="200" d:DesignWidth="400"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        Title="VentanaDeConfirmacion">
    <Viewbox Stretch="Fill">
        <Grid Height="400" Width="700" Background="Transparent">
            <Border
                CornerRadius="20"
                Margin="20"
                Panel.ZIndex="1"
                BorderThickness="4">
                <Border.Background>
                    <ImageBrush ImageSource="/Imagenes/fondoazul.png" Stretch="Fill"/>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                              BlurRadius="15"
                              ShadowDepth="5"
                              Opacity="0.8"/>
                </Border.Effect>
                <Grid Margin="50,30">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <Image Source="/Imagenes/eliminar.png"
                           Width="40"
                           Margin="0,0,10,0"/>
                            <TextBlock x:Name="Txbl_Titulo" 
                               FontSize="30"
                               Text="Confirmación de acción"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>
                        </StackPanel>
                        <Border Height="2" 
                        Background="Black"
                        Margin="0,10"/>
                        <TextBlock x:Name="Txbl_Contenido"
                           FontSize="26"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>
                    </StackPanel>
                    <Grid VerticalAlignment="Bottom">
                        <Button Content="Aceptar"
                        Background="Green"
                        Width="150"
                        Click="Aceptar_Click"
                        HorizontalAlignment="Left"
                        Margin="120,-5,0,5"
                        FontSize="20"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>
                        <Button Content="Cancelar"
                        Background="Red"
                        Width="150"
                        HorizontalAlignment="Left"
                        Margin="290,-5,0,5"
                        FontSize="20"
                        Click="Cancelar_Click"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>

</Window>
