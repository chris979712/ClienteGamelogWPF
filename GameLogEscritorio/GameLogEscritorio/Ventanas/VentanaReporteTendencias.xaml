<Window x:Class="GameLogEscritorio.Ventanas.VentanaReporteTendencias"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLogEscritorio.Ventanas"       
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:System="clr-namespace:System;assembly=mscorlib"

        mc:Ignorable="d"
        Title="VentanaReporteTendencias"
        Height="720" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Border Background="#0C3C5C" Opacity="0.9"/>
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Imagenes/FondoInterfaces.png" Stretch="UniformToFill"/>
            </Border.Background>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-16,0,36">
                    <Image Source="/Imagenes/Amarillo/iconoLapizA.png" Width="100" Height="90" Stretch="Uniform"/>
                    <TextBlock Text="REPORTE TENDENCIAS"
                               Foreground="#FFC000"
                               FontSize="36"
                               FontWeight="Bold"
                               FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                               VerticalAlignment="Center" Margin="20,0,0,0"/>
                </StackPanel>

                <TextBlock x:Name="txtDescripcion" Grid.Row="1"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,20"
                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR A Std"
                           />
                <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Margin="10" VerticalAlignment="Center">
                            <TextBlock Text="Fecha inicio periodo consulta" Foreground="White" FontWeight="Bold" FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"/>
                            <DatePicker x:Name="dpInicio" Width="160"/>
                        </StackPanel>
                        <StackPanel Margin="10" VerticalAlignment="Center">
                            <TextBlock Text="Fecha fin periodo consulta" Foreground="White" FontWeight="Bold" FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"/>
                            <DatePicker x:Name="dpFin" Width="160"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button Content="Revival Retro" Margin="10,0" Padding="15,5" Click="BtnRevival_Click"
                            FontWeight="Bold" FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport" Cursor="Hand"
                            Background="#FFC000" Foreground="White"/>
                    <Button Content="Juegos Más Reseñados" Margin="10,0" Padding="15,5" Click="BtnMasResenados_Click"
                            FontWeight="Bold" FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport" Cursor="Hand"
                            Background="#FFC000" Foreground="White"/>
                    <Button Content="Regresar" Margin="10,0" Padding="15,5" Click="BtnRegresar_Click"
                            FontWeight="Bold" FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport" Cursor="Hand"
                            Background="Red" Foreground="White"/>

                </StackPanel>

                <Border Grid.Row="4" Background="#AA222222" CornerRadius="10" Padding="10" Margin="10,27,0,0">
                    <lvc:CartesianChart x:Name="MiGrafica"
                                        LegendPosition="Right"
                                        Width="700"
                                        Margin="65,0,65,1"
                                        Background="Transparent"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
