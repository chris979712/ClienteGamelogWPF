<Window x:Class="GameLogEscritorio.Ventanas.VentanaEmergente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ventana Emergente" Height="330" Width="630"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
>

    <Grid>
        <Image Source="/Imagenes/fondoazul.png"
               Stretch="Fill"
               Opacity="2"
               Panel.ZIndex="0"/>

        <Border CornerRadius="20"
                Margin="20"
                Panel.ZIndex="1"
                Background="Transparent">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="15"
                                  ShadowDepth="5"
                                  Opacity="0.8"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Image x:Name="Img_IconoVentanaEmergente"
                           Width="40"
                           Margin="0,0,10,0"/>
                    <TextBlock x:Name="Txbl_Titulo"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="Black"
                               FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                               VerticalAlignment="Center" Width="248"/>
                </StackPanel>

                <Border Height="2"
                        Background="Black"
                        Margin="0,0,0,10"
                        Grid.Row="1"/>

                <TextBlock x:Name="Txbl_Contenido"
                           Grid.Row="1"
                           FontSize="18"
                           Foreground="Black"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#OCR B Std"
                           Margin="10"/>

                <Button Content="Aceptar"
                        Grid.Row="1"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Width="150"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,141,0,0"
                        FontFamily="pack://application:,,,/GameLogEscritorio;component/Fuentes/#Anchox Sport"
                        Click="Aceptar_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
